<%- include('../includes/start.ejs') %> <%- include('../includes/header.ejs') %>
<%if(errorMessage.length>0) { %>
<div class="row">
  <div class="col-6 m-auto">
    <div class="alert-danger alert">
      <%=errorMessage%>
    </div>
  </div>
</div>
<%}%>
<form class="form-group col-6 m-auto" action="/login" method="POST" novalidate>
  <h1>Login Form</h1>
  <div class="form-group">
    <label for="mail">Email</label>
    <input type="email" class="form-control" id="mail" name="userEmail" />
  </div>
  <div class="form-group">
    <label for="pass">Password</label>
    <input type="password" class="form-control" id="pass" name="userPassword" />
  </div>
  <input type="hidden" name="_csrf" value="<%=csrfToken%>" />

  <button class="btn btn-primary" type="submit">
    Login
  </button>
  <span> | </span>
  <a href="/resetPassword">Reset Password</a>
</form>

<%- include('../includes/end.ejs') %>
