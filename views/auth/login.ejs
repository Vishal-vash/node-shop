<%- include('../includes/start.ejs') %> <%- include('../includes/header.ejs') %>

<form
  class="form-group col-6 m-auto"
  action="/login"
  method="POST"
>
  <h1>Login Form</h1>
  <div class="form-group">
    <label for="mail">Email</label>
    <input
      type="email"
      class="form-control"
      id="mail"
      name="userEmail"
    />
  </div>
  <div class="form-group">
    <label for="pass">Password</label>
    <input
      type="password"
      class="form-control"
      id="pass"
      name="userPassword"
    />
  </div>
  
  <button class="btn btn-primary" type="submit">
    Login
  </button>
</form>

<%- include('../includes/end.ejs') %>
