<%- include('../includes/start.ejs') %> <%- include('../includes/header.ejs') %>

<form class="form-group col-6 m-auto" action="/admin/add-product" method="POST">
  <h1>Add Product</h1>
  <div class="form-group">
    <label for="pName">Title</label>
    <input type="text" class="form-control" id="pName" name="productName" />
  </div>
  <div class="form-group">
    <label for="pImgUrl">Image URL</label>
    <input type="text" class="form-control" id="pImgUrl" name="productImgUrl" />
  </div>
  <div class="form-group">
    <label for="pPrice">Price</label>
    <input type="number" class="form-control" id="pPrice" name="productPrice" step="0.01" />
  </div>
  <div class="form-group">
    <label for="pDescription">Description</label>
    <textarea
      class="form-control"
      id="pDescription"
      rows="3"
      name="productDesc"
    ></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Add Product</button>
</form>

<%- include('../includes/end.ejs') %>
