<%- include('../includes/start.ejs') %> <%- include('../includes/header.ejs') %>

<form
  class="form-group col-6 m-auto"
  action="/admin/<%if(!editing) { %>add-product <%} else {%>edit-product<%}%>"
  method="POST"
>
  <h1>
    <%if (!editing) {%> Add <% } else {%> Edit <% }%> Product
  </h1>
  <div class="form-group">
    <label for="pName">Title</label>
    <input
      type="text"
      class="form-control"
      id="pName"
      name="productName"
      value="<%if (editing) {%><%=product.productName%> <% }%>"
    />
  </div>
  <div class="form-group">
    <label for="pImgUrl">Image URL</label>
    <input
      type="text"
      class="form-control"
      id="pImgUrl"
      name="productImgUrl"
      value="<%if (editing) {%><%=product.productImgUrl%> <% }%>"
    />
  </div>
  <div class="form-group">
    <label for="pPrice">Price</label>
    <input
      type="text"
      class="form-control"
      id="pPrice"
      name="productPrice"
      value="<%if (editing) {%><%=+product.productPrice%> <% }%>"
    />
  </div>
  <div class="form-group">
    <label for="pDescription">Description</label>
    <textarea
      class="form-control"
      id="pDescription"
      rows="3"
      name="productDesc"
    ><%if (editing) {%><%=product.productDesc%> <% }%></textarea>
  </div>
  <%if(editing){%>
    <input type="hidden" name="productId" value="<%=product._id%>" />
  <%}%>
  <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
  <button class="btn btn-primary" type="submit">
    <%if (!editing) {%> Add <% } else {%> Update <% }%> Product
  </button>
</form>

<%- include('../includes/end.ejs') %>
