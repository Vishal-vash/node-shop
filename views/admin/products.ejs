<%- include('../includes/start.ejs') %>
<%- include('../includes/header.ejs') %>

    <%if (products.length>0) {%>
        <h1>Admin Products</h1>
        <% for(let productSlice of products) { %>
            <div class="card-deck mb-3">
            <% for(let prod of productSlice) { %>
            <div class="card col-4 p-0">
                <img
                src="<%= prod.productImgUrl %>"
                class="card-img-top"
                alt="..."
                height="220"
                />
                <div class="card-body">
                <h5 class="card-title"><%= prod.productName %></h5>
                <h6>Price - $<%= prod.productPrice %></h6>
                <p class="card-text">
                    <%= prod.productDesc %>
                </p>
                <div class="row pl-3">
                    <a href="/admin/edit-product/<%= prod._id %>?edit=true" class="btn btn-primary col-3">Edit</a>
                    <form action="/admin/delete-product" method="POST" class="col-9">
                        <input type="hidden" name="delProdId" value="<%=prod._id%>">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
                </div>
            </div>
            <% } %>
            </div>
        <% } %>
    <% } else {%>
    <h1>No Products Available</h1>
    <% }%>

<%- include('../includes/end.ejs') %>


